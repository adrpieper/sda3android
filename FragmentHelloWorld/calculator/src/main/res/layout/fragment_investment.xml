<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/investmentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/investment" />

    <EditText
        android:id="@+id/amountOfMoneyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="@string/Type_amount_of_money" />

    <TextView
        android:id="@+id/periodOfTimeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Period_of_time" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/finalValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Final_value" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Calculate" />
</LinearLayout>