<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"

    android:shape="rectangle"
    >

    <gradient android:startColor="#bdc2bd"
        android:endColor="#8b8b8b"
        android:centerColor="#545454"
        android:angle="45"
        />

    <stroke
        android:color="#000000"
        android:width="16dp"
        android:dashWidth="32dp"
        android:dashGap="16dp"
        />

    <corners android:radius="160dp"
        android:topLeftRadius="0dp"
        android:topRightRadius="0dp"
        />

    <padding android:bottom="32dp"
        android:left="32dp"
        android:right="32dp"
        android:top="32dp" />
</shape>