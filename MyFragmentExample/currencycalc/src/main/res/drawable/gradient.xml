<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <gradient
        android:startColor="@color/buttonPressed"
        android:endColor="@color/buttonDefault"
        android:centerColor="@color/buttonDisabled"
        android:angle="90"/>

    <stroke
        android:color="#000"
        android:width="8dp"
        android:dashGap="4dp"
        android:dashWidth="16dp"/>

    <!-- solid overrides gradient -->
    <solid android:color="#0f0" />

    <corners android:radius="16dp" />

</shape>